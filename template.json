{
  "variables": {
    "boot_wait": "10s",
    "box_basename": "Base-Archlinux-Desktop",
    "build_directory": "output",
    "compression_level": "9",
    "country": "US",
    "cpus": "2",
    "description_name": "Archlinux Desktop",
    "disk_size": "80000",
    "guest_additions_url": "",
    "headless": "false",
    "http_directory": "http",
    "http_proxy": "{{ env `HTTP_PROXY` }}",
    "https_proxy": "{{ env `HTTPS_PROXY` }}",
    "iso_checksum_url": "https://mirror.arizona.edu/archlinux/iso/latest/sha1sums.txt",
    "iso_url": "https://mirror.arizona.edu/archlinux/iso/latest/archlinux-2021.02.01-x86_64.iso",
    "iso_version": "2021.02.01",
    "memory": "4096",
    "no_proxy": "{{ env `NO_PROXY` }}",
    "ssh_port": "22",
    "ssh_timeout": "30m",
    "username": "vagrant",
    "username_password": "vagrant",
    "vagrantup_token": "{{ env `VAGRANTUP_TOKEN` }}",
    "vagrantup_user": "ProfessorManhattan",
    "write_zeros": "true"
  },
  "builders": [
    {
      "type": "parallels-iso",
      "boot_command": [
        "<enter><wait10><wait10><wait10><wait10>",
        "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/enable-ssh.sh<enter><wait5>",
        "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/poweroff.timer<enter><wait5>",
        "/usr/bin/bash ./enable-ssh.sh<enter>"
      ],
      "boot_wait": "{{ user `boot_wait` }}",
      "cpus": "{{ user `cpus` }}",
      "disk_size": "{{ user `disk_size` }}",
      "guest_os_type": "linux-2.6",
      "http_directory": "{{ user `http_directory` }}",
      "iso_checksum": "file:{{ user `iso_checksum_url` }}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `memory` }}",
      "output_directory": "{{ user `build_directory` }}/{{ user `box_basename` }}-{{ user `iso_version` }}-Parallels",
      "parallels_tools_flavor": "lin",
      "parallels_tools_mode": "attach",
      "shutdown_command": "sudo systemctl start poweroff.timer",
      "ssh_password": "{{ user `username_password` }}",
      "ssh_port": "{{ user `ssh_port` }}",
      "ssh_timeout": "{{ user `ssh_timeout` }}",
      "ssh_username": "{{ user `username` }}",
      "vm_name": "{{ user `box_basename` }}-{{ user `iso_version` }}"
    },
    {
      "type": "qemu",
      "boot_command": [
        "<enter><wait10><wait10><wait10><wait10>",
        "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/enable-ssh.sh<enter><wait5>",
        "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/poweroff.timer<enter><wait5>",
        "/usr/bin/bash ./enable-ssh.sh<enter>"
      ],
      "boot_wait": "{{ user `boot_wait` }}",
      "cpus": "{{ user `cpus` }}",
      "disk_size": "{{ user `disk_size` }}",
      "headless": "{{ user `headless`}}",
      "http_directory": "{{ user `http_directory` }}",
      "iso_checksum": "file:{{ user `iso_checksum_url` }}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `memory` }}",
      "output_directory": "{{ user `build_directory` }}/{{ user `box_basename` }}-{{ user `iso_version` }}-KVM",
      "shutdown_command": "sudo systemctl start poweroff.timer",
      "ssh_password": "{{ user `username_password` }}",
      "ssh_port": "{{ user `ssh_port` }}",
      "ssh_timeout": "{{ user `ssh_timeout` }}",
      "ssh_username": "{{ user `username` }}",
      "vm_name": "{{ user `box_basename` }}-{{ user `iso_version` }}"
    },
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<enter><wait10><wait10><wait10><wait10>",
        "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/enable-ssh.sh<enter><wait5>",
        "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/poweroff.timer<enter><wait5>",
        "/usr/bin/bash ./enable-ssh.sh<enter>"
      ],
      "boot_wait": "{{ user `boot_wait` }}",
      "cpus": "{{ user `cpus` }}",
      "disk_size": "{{ user `disk_size` }}",
      "guest_additions_mode": "disable",
      "guest_os_type": "ArchLinux_64",
      "hard_drive_interface": "sata",
      "headless": "{{ user `headless`}}",
      "http_directory": "{{ user `http_directory` }}",
      "iso_checksum": "file:{{ user `iso_checksum_url` }}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `memory` }}",
      "output_directory": "{{ user `build_directory` }}/{{ user `box_basename` }}-{{ user `iso_version` }}-VirtualBox",
      "shutdown_command": "sudo systemctl start poweroff.timer",
      "ssh_password": "{{ user `username_password` }}",
      "ssh_port": "{{ user `ssh_port` }}",
      "ssh_timeout": "{{ user `ssh_timeout` }}",
      "ssh_username": "{{ user `username` }}",
      "vm_name": "{{ user `box_basename` }}-{{ user `iso_version` }}"
    },
    {
      "type": "vmware-iso",
      "boot_command": [
        "<enter><wait10><wait10><wait10><wait10>",
        "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/enable-ssh.sh<enter><wait5>",
        "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/poweroff.timer<enter><wait5>",
        "/usr/bin/bash ./enable-ssh.sh<enter>"
      ],
      "boot_wait": "{{ user `boot_wait` }}",
      "cpus": "{{ user `cpus` }}",
      "disk_size": "{{ user `disk_size` }}",
      "guest_os_type": "other3xlinux-64",
      "headless": "{{ user `headless`}}",
      "http_directory": "{{ user `http_directory` }}",
      "iso_checksum": "file:{{ user `iso_checksum_url` }}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `memory` }}",
      "output_directory": "{{ user `build_directory` }}/{{ user `box_basename` }}-{{ user `iso_version` }}-VMWare",
      "shutdown_command": "sudo systemctl start poweroff.timer",
      "ssh_password": "{{ user `username_password` }}",
      "ssh_port": "{{ user `ssh_port` }}",
      "ssh_timeout": "{{ user `ssh_timeout` }}",
      "ssh_username": "{{ user `username` }}",
      "vm_name": "{{ user `box_basename` }}-{{ user `iso_version` }}"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "compression_level": "{{ user `compression_level` }}",
        "output": "{{ user `build_directory` }}/{{ user `box_basename` }}.{{ .Provider }}.box"
      },
      {
        "type": "vagrant-cloud",
        "access_token": "{{ user `vagrantup_token` }}",
        "box_tag": "{{ user `vagrantup_user` }}/{{ user `box_basename` }}",
        "version_description": "{{ user `description_name` }} version {{ user `iso_version` }}",
        "version": "{{ user `iso_version` }}"
      }
    ]
  ],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [
        "COUNTRY={{ user `country` }}"
      ],
      "execute_command": "{{ .Vars }} sudo -E -S bash '{{ .Path }}'",
      "expect_disconnect": true,
      "script": "scripts/install-base.sh"
    },
    {
      "type": "shell",
      "execute_command": "{{ .Vars }} sudo -E -S bash '{{ .Path }}'",
      "only": [
        "parallels-iso"
      ],
      "script": "scripts/install-parallels.sh"
    },
    {
      "type": "shell",
      "execute_command": "{{ .Vars }} sudo -E -S bash '{{ .Path }}'",
      "only": [
        "virtualbox-iso"
      ],
      "script": "scripts/install-virtualbox.sh"
    },
    {
      "type": "shell",
      "execute_command": "{{ .Vars }} sudo -E -S bash '{{ .Path }}'",
      "only": [
        "vmware-iso"
      ],
      "script": "scripts/install-vmware.sh"
    },
    {
      "type": "shell",
      "environment_vars": [
        "WRITE_ZEROS={{ user `write_zeros` }}"
      ],
      "execute_command": "{{ .Vars }} sudo -E -S bash '{{ .Path }}'",
      "expect_disconnect": true,
      "scripts": [
        "scripts/install-gdm-gnome.sh",
        "scripts/cleanup.sh"
      ]
    }
  ]
}
